{
  "name": "@hebcal/core",
  "version": "5.0.1",
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "contributors": [
    "Eyal Schachter (https://github.com/Scimonster)",
    "Danny Sadinoff (https://github.com/dsadinoff)",
    "Benny Powers (https://github.com/bennypowers)"
  ],
  "keywords": [
    "hebcal",
    "hebrew",
    "calendar",
    "jewish",
    "holidays",
    "chagim",
    "sedra",
    "date",
    "dafyomi",
    "zemanim",
    "zmanim"
  ],
  "description": "A perpetual Jewish Calendar API",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "typings": "hebcal.d.ts",
  "engines": {
    "node": ">= 20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hebcal/hebcal-es6.git"
  },
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-es6/issues"
  },
  "files": [
    "dist",
    "hebcal.d.ts",
    "po"
  ],
  "scripts": {
    "build:rollup": "rollup -c",
    "build": "npm run po2json && npm run build:rollup",
    "prepublish": "npm run build",
    "po2json": "node ./po2json.cjs po/*.po",
    "readme": "npx -p jsdoc-to-markdown jsdoc2md dist/index.js",
    "pretest": "npm run build",
    "lint": "eslint src",
    "coverage": "nyc --concurrency 2 ava",
    "test": "ava --concurrency 4"
  },
  "license": "GPL-2.0",
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "require": [
      "@babel/register"
    ],
    "verbose": true
  },
  "peerDependencies": {
    "temporal-polyfill": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/register": "^7.22.15",
    "@hebcal/hdate": "^0.8.2",
    "@hebcal/noaa": "^0.8.10",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "ava": "^6.0.1",
    "core-js": "^3.34.0",
    "eslint": "^8.55.0",
    "eslint-config-google": "^0.14.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "nyc": "^15.1.0",
    "rollup": "^4.7.0",
    "ttag-cli": "^1.10.9"
  }
}
